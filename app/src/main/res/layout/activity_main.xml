<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    tools:context=".MainActivity"
    >

    <LinearLayout
        android:id="@+id/names"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:paddingHorizontal="10sp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/dc1" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/dc2" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/dc3" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/dc4" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/dc5" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/dc6" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/dc7" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/dc8" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/dc9" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/dc10" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/dc11" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/channels"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/secondGray"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toEndOf="@id/names"
        android:paddingLeft="10sp"
        android:paddingRight="50sp"
        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Los Predas"
                android:textColor="@color/white"
                android:layout_columnSpan="2"
                android:gravity="start"
                android:layout_row="0"
                android:layout_column="0"
                android:textStyle="bold"
                />

            <Button
                android:layout_row="0"
                android:layout_column="1"
                android:drawable="@drawable/baseline_expand_more_24"
                />


            <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                >


            </SearchView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                />


        </GridLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:drawableStart="@drawable/baseline_expand_more_24"
                android:drawablePadding="5dp"
                android:text="Text Channels"
                android:textSize="10dp"
                android:textStyle="bold"
                android:padding="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="#  general"
                android:padding="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="#  clips-and-highlights"
                android:padding="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="#  music"
                android:padding="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="#  tibia-commands"
                android:padding="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="#  otserv"
                android:padding="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="#  projects"
                android:padding="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="Voice Channels"
                android:drawableStart="@drawable/baseline_expand_more_24"
                android:drawablePadding="5dp"
                android:textSize="10dp"
                android:textStyle="bold"
                android:padding="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="pkiando"
                android:drawableStart="@drawable/baseline_volume_up_24"
                android:drawablePadding="5dp"
                android:padding="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="General"
                android:drawableStart="@drawable/baseline_volume_up_24"
                android:drawablePadding="5dp"
                android:padding="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="El pelon enseÃ±ando Lore"
                android:drawableStart="@drawable/baseline_volume_up_24"
                android:drawablePadding="5dp"
                android:padding="10sp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        android:background="@color/secondGray"
        android:orientation="vertical"
        android:paddingHorizontal="10sp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/channels"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/dcladoderecho01" />

        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@color/secondGray"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/dcgato" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="We"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="28sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="8dp"
                android:text="This"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/dcladoderecho02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="8dp"
                android:text="WHO"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/dcladoderecho03" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/dcladoderecho04" />

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bottomMenu"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/dcabajo1" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/dcabajo2" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/dcabajo3" />

        <ImageView
            android:layout_width="71dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/dcabajo4" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
